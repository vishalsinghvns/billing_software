@model Preora.Models.AccHeadModel
@{
    ViewBag.Title = "AddAccHead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="/Admin/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Account Head</a></li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-info">
                    <h4 class="mb-0 text-white">Add/Update Account Heads</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddAccHead", "Admin", FormMethod.Post, new { @encType = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.id)

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="control-label">Account Head Name</label>
                                    @Html.TextBoxFor(x => x.AccName, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Account Head Code</label>
                                    @Html.TextBoxFor(x => x.AccCode, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Account Group</label>
                                    @Html.DropDownListFor(x => x.AccGroupid, ViewBag.accgrp as SelectList, "--Select--", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">GST No.</label>
                                    @Html.TextBoxFor(x => x.AccGST, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">PAN No.</label>
                                    @Html.TextBoxFor(x => x.AccPAN, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Opening Balance</label>
                                    @Html.TextBoxFor(x => x.OpeningAmount, new { @type = "number", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Registration Type</label>
                                    <div class="form-control">
                                        Local :
                                        @Html.RadioButtonFor(x => x.RegType, "Local", new { @class = "" })
                                        Central :
                                        @Html.RadioButtonFor(x => x.RegType, "Central", new { @class = "" })
                                    </div>

                                </div>
                            </div>
                        </div>

                        <hr />
                        <h4 class="card-title">Contact Person Info</h4>
                        <div class="row pt-3">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Contact Person</label>
                                    @Html.TextBoxFor(x => x.AccContactPerson, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Email</label>
                                    @Html.TextBoxFor(x => x.AccEmail, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Phone No.</label>
                                    @Html.TextBoxFor(x => x.AccPhone, new { @type = "number", @class = "form-control", @maxlength = "10" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="control-label">Address</label>
                                    @Html.TextAreaFor(x => x.AccAddress, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Area</label>
                                    @Html.TextBoxFor(x => x.AccArea, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">City</label>
                                    @Html.TextBoxFor(x => x.AccCity, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="control-label">Pincode</label>
                                    @Html.TextBoxFor(x => x.AccPincode, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark">
                            Save
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<Preora.Models.PurchaseEntryModel>
@{
    ViewBag.Title = "PurchaseEntryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title mb-0">Purchase Entry List</h4>
                    <a href="~/Admin/PurchaseEntry" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> Add Purchase Bill
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead class="bg-info">
                                <tr>
                                    <th class="text-white">S. No.</th>
                                    <th class="text-white">Entry Code</th>
                                    <th class="text-white">Supplier</th>
                                    <th class="text-white">Invoice #</th>
                                    <th class="text-white">Bill Date</th>
                                    <th class="text-white">Due Date</th>
                                    <th class="text-white">Amount</th>
                                    <th class="text-white">Paid</th>
                                    <th class="text-white">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td><a href="@Url.Action("PurchaseEntryDetail", "Admin", new { c_id = item.id })"><span class="label label-warning">@item.p_entrycode</span></a></td>
                                        <td>@item.supp_name</td>
                                        <td>@item.invoice_no</td>
                                        <td>@Html.DisplayFor(modelItem => @item.billdate)</td>
                                        <td>@Html.DisplayFor(modelItem => @item.duedate)</td>
                                        <td>@item.FinalAmt</td>
                                        <td>@item.PaidAmt</td>
                                        <td>@item.BalanceAmt</td>

                                    </tr>
                                    i++;
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
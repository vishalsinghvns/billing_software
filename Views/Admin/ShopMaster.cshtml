@model IEnumerable<Preora.Models.ShopModel>
@{
    ViewBag.Title = "ShopMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="/Admin/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Shop Master</a></li>
        </ol>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead class="bg-info">
                                <tr>
                                    <th class="text-white">S. No.</th>
                                    <th class="text-white">Shop</th>
                                    <th class="text-white">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Shop</td>
                                        <td><a href="@Url.Action("AddShop", "Admin", new { c_id = item.id })" class="btn btn-primary shadow btn-xs sharp me-3"><i class="fas fa-pencil-alt"></i> </a></td>
                                       
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
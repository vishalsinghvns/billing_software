@model IEnumerable<Preora.Models.PurchaseEntryModel>
@{
    ViewBag.Title = "PurchaseProdList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title mb-0">Purchase Products List</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead class="bg-info">
                                <tr>
                                    <th class="text-white">S. No.</th>
                                    <th class="text-white">Bill Date</th>
                                    <th class="text-white">Product</th>
                                    <th class="text-white">Unit</th>
                                    <th class="text-white">Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Html.DisplayFor(modelItem => @item.billdate)</td>
                                        <td>@item.prod_name</td>
                                        <td>@item.measureunit</td>
                                        <td>@item.item_qty</td>

                                    </tr>
                                    i++;
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Preora.Models.PurchaseVM
@{
    ViewBag.Title = "PurchaseEntryDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table th, .table td, .table tbody tr td {
        border-color: #000
    }
    p, body{
        color:#000

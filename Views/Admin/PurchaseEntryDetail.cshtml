                                <div class="row">
                                    <div class="col-lg-12 text-end">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Gross Amount :</label>
                                                    <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.GrossAmt, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Discount :</label>
                                                    @Html.DisplayFor(x => item.Discount, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Additional Disc :</label>
                                                    @Html.DisplayFor(x => item.AdditionalDisc, new { @class = "form-control" })
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">SGST :</label>
                                                    @Html.DisplayFor(x => item.S_GST, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">CGST :</label>
                                                    @Html.DisplayFor(x => item.C_GST, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">IGST :</label>
                                                    @Html.DisplayFor(x => item.I_GST, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Loading & Unloading Charge :</label>
                                                    @Html.DisplayFor(x => item.LoadingCharge, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Final Amount :</label>
                                                    <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.FinalAmt, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Paid Amount :</label>
                                                    <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.PaidAmt, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Balance Amount :</label>
                                                    <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.BalanceAmt, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-2">
                                                    <label class="control-label">Pay Mode :</label>
                                                    @Html.DisplayFor(x => item.pay_mode, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!-- terms start -->

                                <div class="row">
                                    <div class="col-lg-6 col-8">
                                        <h5 class="text-decoration-underline">Terms Conditions</h5>
                                        <p class="mb-0">1. All subject to Lucknow Jurisdiction.</p>
                                        <p class="mb-0">2. Our responsibility ceases as soon as goods leave our premisies.</p>
                                        <p class="mb-0">3. Goods once sold can not taken back or exchanged.</p>
                                        <p class="mb-0">Bank :- Kotak Mahindra Bank, Current A/c Number : 1445221739, IFSC Code : KKBK0005315</p>

                                    </div>
                                    <div class="col-lg-6 text-end mt-4 col-4">
                                        <h5>(Authorised Signatory)</h5>
                                        <p></p>
                                    </div>
                                </div>
                                <!-- //  terms end -->
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

    <script>
        function printContent(el) {
            var restorepage = document.body.innerHTML;
            var printcontent = document.getElementById(el).innerHTML;
            document.body.innerHTML = printcontent;
            window.print();
            document.body.innerHTML = restorepage;
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnPDF", function () {
            html2canvas($('.printArea')[0], {
                onrendered: function (canvas) {
                    var data = canvas.toDataURL();
                    var docDefinition = {
                        content: [{
                            image: data,
                            width: 500
                        }]
                    };
                    pdfMake.createPdf(docDefinition).download("purchase-entry-Details.pdf");
                }
            });
        });
    </script>

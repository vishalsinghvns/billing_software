</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-4 mb-1 text-right">
            <a href="javascript:void(0);" class="btn btn-danger bx bxs-file-pdf" id="btnPDF">PDF</a>
            <a href="javascript:void(0);" class="btn btn-primary" onclick="printContent('dvmismatch')">Print</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                @foreach (var item in Model.BillVM)
                {
                    <div id="dvmismatch" class="printArea">
                        @*<div class="card-header bg-info">
                            <h4 class="mb-0 text-white">Purchase Entry Detail</h4>
                        </div>*@
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <img src="/CompanyImg/@Model.CompLogo" class="rounded-circle" style="width:100px;height:70px;" />

                                    <h3>Preora S.Md Daud Md Yaqub</h3>
                                    <p>
                                        K-016,First Floor Lulu Mall Lucknow (UP) , India<br />
                                        GSTIN: 09AAGFU4653B1Z7 | State Code: 09 (Uttar Pradesh)
                                    </p>
                                    <h4>Purchase Entry Details</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-6">
                                    <h4 class="mt-3">@Model.CompName</h4>
                                    <p class="mb-0"><label class="control-label">Email:</label> @Model.CompEmail</p>
                                    <p class="mb-0"><label class="control-label">Mobile No.-</label> @Model.CompPhone1</p>

                                </div>
                                <div class="col-lg-6 col-6 text-end">
                                    @Html.HiddenFor(x => item.id)

                                    <div class="col-md-12 mb-0">
                                        <label class="control-label">Supplier Name :</label>
                                        @Html.DisplayFor(x => item.supp_name, new { @class = "form-control" })

                                    </div>
                                    <div class="col-md-12 mb-0">
                                        <label class="control-label">Invoice Number :</label>
                                        @Html.DisplayFor(x => item.invoice_no, new { @type = "text", @class = "form-control" })

                                    </div>
                                    <div class="col-md-12 mb-0">
                                        <label class="control-label">Date :</label>
                                        @Html.DisplayFor(x => item.billdate, new { @type = "date", @class = "form-control" })
                                    </div>
                                    <div class="col-md-12 mb-0">
                                        <label class="control-label">Due Date :</label>
                                        @Html.DisplayFor(x => item.duedate, new { @type = "date", @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="row mt-2 mb-2" id="container">
                                <div class="table-responsive">
                                    <table class="table table-bordered" style="border-color:#000;padding: 10px; margin-top: 10px; margin-bottom: 10px;">
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Unit</th>
                                            <th>Rate</th>
                                            <th>Gross Amt.</th>
                                            <th>Discount</th>
                                            <th>SGST</th>
                                            <th>CGST</th>
                                            <th>IGST</th>
                                            <th>HSN/SAC</th>
                                            <th>Amount</th>

                                        </tr>
                                        @foreach (var prd in Model.productVM)
                                        {
                                            <tr>
                                                <td>@prd.prod_name</td>
                                                <td>@prd.item_qty</td>
                                                <td>@prd.measureunit</td>
                                                <td>@prd.item_rate</td>
                                                <td>@prd.gross_amt</td>
                                                <td>@prd.disc_amt</td>
                                                <td>@prd.sgst_amt</td>
                                                <td>@prd.cgst_amt</td>
                                                <td>@prd.igst_amt</td>
                                                <td>@prd.HSN_SAC</td>
                                                <td><i class="mdi mdi-currency-inr"></i>@prd.finalprod_amt</td>

                                            </tr>

                                        }
                                    </table>
                                </div>
                            </div>



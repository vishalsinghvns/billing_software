@model Preora.Models.SaleReturnVM
@{
    ViewBag.Title = "SaleReturnDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    
    #employee-table {
        border: 1px solid #aaa
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-right mb-3">
            <a href="javascript:void(0);" class="btn btn-danger bx bxs-file-pdf" id="btnPDF">PDF</a>
            <a href="javascript:void(0);" class="btn btn-primary" onclick="printContent('dvmismatch')">Print</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                @foreach (var item in Model.BillVM)
                {
                    <div id="dvmismatch" class="printArea">
                        <div class="card-header bg-info">
                            <h4 class="mb-0 text-white">Sale Return Detail</h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-6 col-6">
                                    <img src="/CompanyImg/@Model.CompLogo" class="rounded-circle" style="width:100px;height:70px;" />

                                    <h4 class="mt-3">@Model.CompName</h4>
                                    <p class="mb-0"><strong>Email:</strong> @Model.CompEmail</p>
                                    <p class="mb-0"><strong>Mobile No.-</strong> @Model.CompPhone1</p>
                                </div>
                                <div class="col-lg-6 col-6 text-right">
                                    @Html.HiddenFor(x => item.id)

                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="control-label">Customer Name :</label>
                                            @Html.DisplayFor(x => item.SR_cust_name, new { @class = "form-control" })

                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="control-label">Bill Date :</label>
                                            @Html.DisplayFor(x => item.SR_billdate, new { @type = "date", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="control-label">Bill Number :</label>
                                            @Html.DisplayFor(x => item.SR_entrycode, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2 mb-2" id="container">
                                <div class="table-responsive">
                                    <table class="table table-bordered" style="padding: 10px; margin-top: 10px; margin-bottom: 10px;">
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Unit</th>
                                            <th>MRP</th>
                                            <th>Rate</th>
                                            @*<th>Gross Amt.</th>*@
                                            @*<th>Discount</th>*@
                                            <th>SGST</th>
                                            <th>CGST</th>
                                            @*<th>IGST</th>*@
                                            <th>HSN/SAC</th>
                                            <th>Amount</th>

                                        </tr>
                                        @foreach (var prd in Model.productVM)
                                        {
                                            <tr>
                                                <td>@prd.SR_prod_name</td>
                                                <td>@prd.SR_itemqty</td>
                                                <td>@prd.SR_measurunit</td>
                                                <td>@prd.SR_mrp</td>
                                                <td>@prd.SR_itemrate</td>
                                                @*<td>@prd.SR_gross_amt</td>*@
                                                @*<td>@prd.SR_discamount</td>*@
                                                <td>@prd.SR_sgstamt</td>
                                                <td>@prd.SR_cgstamt</td>
                                                @*<td>@prd.SR_igstamt</td>*@
                                                <td>@prd.SR_HSNSAC</td>
                                                <td><i class="mdi mdi-currency-inr"></i>@prd.SR_finalprice</td>
                                            </tr>

                                        }
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-8"></div>
                                <div class="col-lg-4 text-right">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">Gross Amount :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_GrossAmt, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">Additional Disc :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_AdditionalDisc, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">SGST :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_SGST, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">CGST :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_CGST, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">Other Charges :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_othercharge, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">Final Amount :</label>
                                                <i class="mdi mdi-currency-inr"></i>@Html.DisplayFor(x => item.SR_FinalAmt, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-12">
                                            <div class="mb-1">
                                                <label class="control-label">Pay Mode :</label>
                                                @Html.DisplayFor(x => item.SR_paymode, new { @class = "form-control" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

    <script>
        function printContent(el) {
            var restorepage = document.body.innerHTML;
            var printcontent = document.getElementById(el).innerHTML;
            document.body.innerHTML = printcontent;
            window.print();
            document.body.innerHTML = restorepage;
        }
    </script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnPDF", function () {
            html2canvas($('.printArea')[0], {
                onrendered: function (canvas) {
                    var data = canvas.toDataURL();
                    var docDefinition = {
                        content: [{
                            image: data,
                            width: 500
                        }]
                    };
                    pdfMake.createPdf(docDefinition).download("purchase-entry-Details.pdf");
                }
            });
        });
    </script>

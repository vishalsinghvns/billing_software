@model IEnumerable<Preora.Models.SaleEntryModel>
@{
    ViewBag.Title = "SaleEntryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title mb-0">Sale Entry List</h4>
                    <a href="~/Admin/SaleEntry" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> Add Sale Bill</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead class="bg-info">
                                <tr>
                                    <th class="text-white">S. No.</th>
                                    <th class="text-white">Transaction No.</th>
                                    <th class="text-white">Customer</th>
                                    <th class="text-white">Phone</th>
                                    <th class="text-white">Bill By</th>
                                    @*<th>Invoice #</th>
                                    <th>Invoice Type</th>*@
                                    <th class="text-white">Bill Date</th>
                                    @*<th>Due Date</th>*@
                                    <th class="text-white">Amount</th>
                                    @*<th>Paid</th>
                                    <th>Balance</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td><a href="@Url.Action("SaleEntryDetail", "Admin", new { c_id = item.id })"><span class="label label-warning">@item.s_entrycode</span></a></td>
                                        <td>@item.custname</td>
                                        <td>@item.custphone</td>
                                        <td>@item.Usrname</td>
                                        @*<td>@item.invoiceno</td>
                                        <td>@item.invoicetype</td>*@
                                        <td>@Html.DisplayFor(modelItem => @item.billdate_s)</td>
                                        @*<td>@Html.DisplayFor(modelItem => @item.duedate_s)</td>*@
                                        <td>@item.FinalAmt_s</td>
                                        @*<td>@item.PaidAmt_s</td>
                                        <td>@item.BalanceAmt_s</td>*@

                                    </tr>
                                    i++;
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
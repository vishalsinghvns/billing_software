@model Preora.Models.ShopModel
@{
    ViewBag.Title = "AddShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="/Admin/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Shop</a></li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-info">
                    <h4 class="mb-0 text-white">Update Shop</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddShop", "Admin", FormMethod.Post, new { @encType = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.id)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Acc Group</label>
                                    @Html.TextBoxFor(x => x.Shop, new { @type = "text", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6 mt-lg-4 mt-md-4 mt-sm-4">
                                <button type="submit" class="btn btn-dark">
                                    Save
                                </button>
                            </div>
                        </div>
                }
                    </div>
                </div>
        </div>
    </div>
</div>
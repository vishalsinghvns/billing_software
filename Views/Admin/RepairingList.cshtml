
@model IEnumerable<Preora.Models.RepairModel>
@{
    ViewBag.Title = "RepairingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title mb-0">Sale Entry List</h4>
                    <a href="~/Admin/RepairEntry" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> Add New</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file_export" class="table table-striped table-bordered display">
                            <thead class="bg-info">
                                <tr>
                                    <th class="text-white">S. No.</th>
                                    <th class="text-white">Transaction No.</th>
                                    <th class="text-white">Customer</th>
                                    <th class="text-white">Phone</th>
                                    <th class="text-white">Bill By</th>
                                    <th class="text-white">Bill Date</th>
                                    <th class="text-white">Amount</th>
                                    <th class="text-white">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td><a href="@Url.Action("RepairDetail", "Admin", new { c_id = item.id })"><span class="label label-warning">@item.repairno</span></a></td>
                                        <td>@item.Custmr</td>
                                        <td>@item.phoneno</td>
                                        <td>@item.Usrname</td>
                                        <td>@Html.DisplayFor(modelItem => @item.date)</td>
                                        <td>@item.Amount</td>
                                        @if (item.status == "Pending")
                                        {
                                            <td><span class="label label-warning">@item.status</span> | <a href="@Url.Action("statuschange","Admin",new{userid=item.id})" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i>Complete</a></td>
                                        }
                                        @if (item.status == "Completed")
                                        {
                                            <td>@item.status</td>
                                        }

                                    </tr>
                                    i++;
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
